// Scoping Demo
// Demonstrates block scoping with if statements

let x = 10;

// Blocks create new scopes
{
    let y = 20;
    let z = x + y;  // Can access outer x
}

// If statements with blocks
if (x > 5) {
    let result = x * 2;
} else {
    let result = x / 2;
}

// Nested blocks
{
    let outer = 1;
    {
        let inner = 2;
        let sum = outer + inner;
    }
}
